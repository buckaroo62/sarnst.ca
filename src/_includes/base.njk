<!DOCTYPE HTML>
<html>
	<head>
		<title>{{ title }}</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="/assets/css/main.css" />
		<noscript><link rel="stylesheet" href="/assets/css/noscript.css" /></noscript>
	</head>
	<body class="is-preload">
		<!-- Sidebar -->
		<section id="sidebar">
			<div class="inner">
				<nav>
					<ul>
						{% for item in sidebar %}
						<li><a href="#{{ item.url }}">{{ item.text }}</a></li>
						{% endfor %}
					</ul>
				</nav>
			</div>
		</section>
		<!-- Wrapper -->
			<div id="wrapper">
				<!-- Intro -->
				<section id="intro" class="wrapper style1 fullscreen fade-up">
					<div class="inner">
						<h1>Sheldon Arnst</h1>
						<img src="/assets/images/bath.png" alt="" data-position="center center" />
						<p>Welcome to my little corner of the internet.</p>
						<ul class="actions">
							<li><a href="#one" class="button scrolly">{{ buttontext }}</a></li>
						</ul>
					</div>
				</section>
				<!-- One -->
				<section id="one" class="wrapper style2 spotlights">
					<section>
						<a href="#" class="image"><img src="/assets/images/Sheldon_Me.jpg" alt="" data-position="center center" /></a>
						<div class="content">
							<div class="inner">
								<h2>Born to Animate</h2>
								<p>{{ aboutme }}</p>
							</div>
						</div>
					</section>
				</section>
				<!-- Two -->
				<section id="two" class="wrapper style3 fade-up">
					<div class="inner">
						<h2>What I'm passionate about</h2>
						<div class="features">
				{% block content %}
					{{ content | safe }}
				{% endblock content %}
						</div>
					</div>
				</section>
				<!-- Three -->
				<section id="three" class="wrapper style1 fade-up">
					<div class="inner">
				{% block form %}
					{{ content | safe }}
				{% endblock form %}

					</div>
				</section>
			</div>
		<!-- Footer -->
		<footer id="footer" class="wrapper style1-alt">
			<div class="inner">
				<ul class="menu">
					<li>&copy; {{ owner }}. All rights reserved.</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
				</ul>
			</div>
		</footer>
		<!-- Scripts -->
		<script src="/assets/js/jquery.min.js"></script>
		<script src="/assets/js/jquery.scrollex.min.js"></script>
		<script src="/assets/js/jquery.scrolly.min.js"></script>
		<script src="/assets/js/browser.min.js"></script>
		<script src="/assets/js/breakpoints.min.js"></script>
		<script src="/assets/js/util.js"></script>
		<script src="/assets/js/main.js"></script>
	</body>
</html>